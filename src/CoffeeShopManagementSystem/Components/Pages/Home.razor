@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Welcome to <span class="text-dark">Coffee Shop Management</span> <img src="/Images/cf1.png" alt="Product" width="50" height="50" style="margin-right: 10px;" /></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span>You are not LogIn .<a class="fw-bolder" href="/login">Click Here</a>to Login!.</span>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b>@context.User.Identity.Name</b>  <a class="fw-bolder" href="/logout">Click Here</a> to logout!</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
   
</div>

